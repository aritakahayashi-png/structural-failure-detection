{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Structural Failure Detection Event Schema",
  "type": "object",
  "required": ["schema_version", "source_item", "events"],
  "properties": {
    "schema_version": { "type": "string" },
    "source_item": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "timestamp": { "type": ["string", "null"] },
        "source_type": { "type": "string" }
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["event_id", "event_type", "severity", "confidence", "evidence"],
        "properties": {
          "event_id": { "type": "string" },
          "event_type": { "type": "string" },
          "severity": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "evidence": {
            "type": "object",
            "required": ["quote"],
            "properties": {
              "quote": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
